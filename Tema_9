public class Main {
    public static void main(String[] args) {
        Cliente cliente = new Cliente();
        cliente.edad = 37; {
            System.out.println("Edad cliente: " + cliente.edad);
        }
        cliente.nombre = "Sandra"; {
            System.out.println("Nombre cliente: " + cliente.nombre);
        }
        cliente.telefono = 123456789; {
            System.out.println("Telefono cliente: " + cliente.telefono);
        }
        cliente.credito = 100; {
            System.out.println("El cliente tiene: " + cliente.credito + " creditos");
        }
        Trabajador trabajador = new Trabajador();
        trabajador.edad = 33; {
            System.out.println("Edad trabajador: " + trabajador.edad);
        }
        trabajador.nombre = "Eric"; {
            System.out.println("Nombre trabajador: " + trabajador.nombre);
        }
        trabajador.telefono = 987654321; {
            System.out.println("Telefono trabajador: " + trabajador.telefono);
        }
        trabajador.salario = 1200.50; {
            System.out.println("El salario del trabajador es : " + trabajador.salario + " euros");
        }
    }
}
class Persona {
    int edad;
    String nombre;
    int telefono;
}
class Cliente extends Persona {
    int credito;
}
class Trabajador extends Persona {
    double salario;
}
